
@include "examples/utils.zasm"

main:
    la $r2, msg
    jal print_string
    putc 'A'
    hlt

.func:
    putc 'F'
    ret

; r2 is the char pointer
print_string:
.loop:
    ldb  $r1, $r2(0)

    andi $acc, 0
    la   $tmp, .loop_end
    ceq  $acc, $r1
    beq  $tmp

    lli  $acc, 1            ; Value for putchar software interrupt
    int                     ; Cause the software interrupt
    
    addi $r2, 1
    jl   .loop
.loop_end:
    ret

.data

msg: "Hello, world!\0"
